@model WebApplication1.Models.Progress

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title">Create Progress</h1>

<h4>Progress</h4>

<div class="form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="StudentId" class="control-label">Student</label>
                    <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId" class="control-label">Course</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="LessonNo" class="control-label">Lesson Number</label>
                    <select asp-for="LessonNo" class="form-control" asp-items="ViewBag.LessonNo"></select>
                </div>
                <div class="form-group">
                    <label asp-for="LastAccess" class="control-label">Last Access</label>
                    <input asp-for="LastAccess" class="form-control" />
                    <span asp-validation-for="LastAccess" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="LessonStatus" class="form-check-input" />
                    <label class="form-check-label" asp-for="LessonStatus">@Html.DisplayNameFor(model => model.LessonStatus)</label>
                </div>
                <div class="form-group" style="float:right;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary" style="float:right;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
