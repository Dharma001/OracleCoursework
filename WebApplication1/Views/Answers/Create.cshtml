@model WebApplication1.Models.Answer

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title">Create Answer</h1>

<h4>Answer</h4>
<hr />
<div class="form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="QuestionId" class="control-label">Question</label>
                    <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.QuestionId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="InstructorId" class="control-label">Instructor</label>
                    <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="AnswerText" class="control-label">Answer Text</label>
                    <input asp-for="AnswerText" class="form-control" />
                    <span asp-validation-for="AnswerText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AnswerDate" class="control-label">Answer Date</label>
                    <input asp-for="AnswerDate" class="form-control" />
                    <span asp-validation-for="AnswerDate" class="text-danger"></span>
                </div>
                <div class="form-group" style="float:right;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
