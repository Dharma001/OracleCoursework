@model WebApplication1.Models.Question

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title">Delete Confirmation</h5>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">Are you sure you want to delete this question?</h4>
                    <dl class="row">
                        <dt class="col-sm-3">Question Text:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.QuestionText)</dd>

                        <dt class="col-sm-3">Question Date:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.QuestionDate)</dd>

                        <dt class="col-sm-3">Student ID:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Student.StudentId)</dd>

                        <dt class="col-sm-3">Lesson No:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Lesson.LessonNo)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="QuestionId" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
