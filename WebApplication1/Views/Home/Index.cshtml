    </div>
    <div class="col d-flex flex-column justify-content-center align-items-center">
    <div class="container m-5">
            <div class="col d-flex flex-column justify-content-center align-items-center">
            <div class="col-md-8">
                <div class="chart">
                    <h2 class="mb-4 text-success" style="font-size: 24px; font-weight: bold;">Student Enrollment in each course</h2>
                    <canvas id="enrollmentChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="container m-5">
            <div class="col d-flex flex-column justify-content-center align-items-center">
            <div class="col-md-9">
                <div class="chart">
                    <h2 class="mb-4 text-danger" style="font-size: 24px; font-weight: bold;">Course count taken by each instructor </h2>
                    <canvas id="instructorChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="container m-5">
            <div class="col d-flex flex-column justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="chart">
                    <h2 class="mb-4 text-danger" style="font-size: 24px; font-weight: bold;">Lessons counts in Every Course </h2>
                    <canvas id="lessonChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
    </div>
    @section scripts {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            var chartData = @Html.Raw(Json.Serialize(ViewData["ChartData"]));
            var ctx = document.getElementById('enrollmentChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: chartData.enrollmentLabels,
                    datasets: [{
                        label: 'Student Enrollment Count',
                        data: chartData.enrollmentData,
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)',
                            'rgb(25, 25, 25)',
                            'rgb(0, 0, 0)',
                            'rgb(139, 0, 0)',
                            'rgb(0, 0, 139)',
                            'rgb(128, 128, 128)',
                            'rgb(0, 128, 0)',
                            'rgb(128, 0, 128)'
                        ],
                        borderColor: [
                            'rgba(30, 144, 255, 1)',
                            'rgba(0, 0, 205, 1)',
                            'rgba(0, 0, 139, 1)',
                            'rgba(0, 0, 0, 1)',
                            'rgba(139, 0, 0, 1)',
                            'rgba(0, 100, 0, 1)',
                            'rgba(139, 69, 19, 1)',
                            'rgba(128, 0, 128, 1)',
                            'rgba(165, 42, 42, 1)',
                            'rgba(0, 139, 139, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
                var ctx2 = document.getElementById('instructorChart').getContext('2d');
                var myChart2 = new Chart(ctx2, {
                    type: 'bar',
                    data: {
                    labels: chartData.instructorLabels,
                        datasets: [{
                            label: 'Course Count',
                        data: chartData.instructorData,
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)',
                            'rgb(25, 25, 25)',
                            'rgb(0, 0, 0)',
                            'rgb(139, 0, 0)',
                            'rgb(0, 0, 139)',
                            'rgb(128, 128, 128)',
                            'rgb(0, 128, 0)',
                            'rgb(128, 0, 128)'
                        ],
                        borderColor: [
                            'rgba(30, 144, 255, 1)',
                            'rgba(0, 0, 205, 1)',
                            'rgba(0, 0, 139, 1)',
                            'rgba(0, 0, 0, 1)',
                            'rgba(139, 0, 0, 1)',
                            'rgba(0, 100, 0, 1)',
                            'rgba(139, 69, 19, 1)',
                            'rgba(128, 0, 128, 1)',
                            'rgba(165, 42, 42, 1)',
                            'rgba(0, 139, 139, 1)'
                        ],
                        borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            var ctx2 = document.getElementById('lessonChart').getContext('2d');
            var myChart2 = new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: chartData.lessonLabels,
                    datasets: [{
                        label: 'Lesson Count',
                        data: chartData.lessonData,
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)'
                        ],
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });

            var ctx2 = document.getElementById('lessonChart').getContext('2d');
            var myChart2 = new Chart(ctx2, {
                type: 'pie', // Use pie chart type
                data: {
                    labels: chartData.lessonLabels,
                    datasets: [{
                        label: 'Lesson Count',
                        data: chartData.lessonData,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
