                options: {
                    responsive: true,
                    maintainAspectRatio: false, // To control aspect ratio
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });


        </script>
    }

</main>
