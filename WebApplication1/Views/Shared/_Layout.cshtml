<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-3+hJ94NyiT3DL5tw7v4QUfWR6+7UEocvM/Nt+8npxl+rVy3b42DCrV+sQp5c9hx+" crossorigin="anonymous">

    <style>
        /* Custom styles for the admin dashboard sidebar */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }

        .cont {
            display: flex;
            width: 100%;
            height:auto;
        }

        header {
            width: 250px; /* Width of the sidebar */
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
        }

        .main-content {
            flex-grow: 1; 
            padding: 30px 30px;
        }

        .navbar {
            margin-top: 20px;
            padding: 0;
        }

        .navbar-brand {
            display: block;
            padding: 10px 28px;
            color: white;
            text-decoration: none;
            background-color:rgba(0,0,0,0.4);
        }

        .navbar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-item {
            padding: 8px 20px;
        }

            .nav-item a {
                color: #000;
                text-decoration: none;
                display: block;
            }

                .nav-item a:hover {
                    background-color: #f1f1f1;
                }

        .footer {
            text-align: center;
            padding: 20px;
            width:40%;
        }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
        }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
        }

            .custom-table th,
            .custom-table td {
                padding: 10px;
                border-bottom: 1px solid #ddd;
            }

            .custom-table th {
                background-color: #f2f2f2;
                font-weight: bold;
                text-align: left;
            }

            .custom-table tbody tr:nth-child(odd) {
                background-color: #f9f9f9;
            }

            .custom-table tbody tr:nth-child(even) {
                background-color: #e6e6e6; /* Change this color as desired */
            }

            .custom-table tbody tr:hover {
                background-color: #f5f5f5;
            }

        .page-title {
            font-size: 14px;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
            text-transform: uppercase;
            border-radius:4px;
            border: 2px solid #333;
            padding: 8px;
            width:20%;

            
        }
        /* Form container */
        .form-container {
            max-width: 100%;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Form inputs */
        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }


        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #007bff;
            text-decoration: none;
        }
            .back-link:hover {
                text-decoration: underline;
            }

        .box {
            transition: transform 0.3s ease;
        }

            .box:hover {
                transform: translateY(-5px);
            }

        .card-body:hover {
            cursor: pointer;
        }


    </style>
</head>
<body>
    <div class="cont">
        <!-- Sidebar -->
        <header>
            <nav class="navbar">
                <!-- Navbar content -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Database application</a>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instructors" asp-action="Index">Instructors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Lessons" asp-action="Index">Lessons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Contents" asp-action="Index">Contents</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Enrollments" asp-action="Index">Enrollments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Questions" asp-action="Index">Questions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Answers" asp-action="Index">Answers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Progresses" asp-action="Index">Progress</a>
                    </li>
                </ul>
            </nav>

        </header>

        <div class="main-content" style="max-height: 685px; overflow: auto; border: 1px solid #ced4da;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
