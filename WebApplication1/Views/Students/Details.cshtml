@model WebApplication1.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container">
    <h1>Student Details</h1>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Student Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">First Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-2">Last Name:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>

                <dt class="col-sm-2">Date of Birth:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                <dt class="col-sm-2">Contact:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Contact)</dd>

                <dt class="col-sm-2">Email Address:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.EmailAddress)</dd>

                <dt class="col-sm-2">Country:</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Country)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.StudentId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
