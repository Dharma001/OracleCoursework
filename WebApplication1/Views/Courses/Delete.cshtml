@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title">Delete Confirmation</h5>
                </div>
                <div class="card-body">
                    <h4 class="mb-4">Are you sure you want to delete this course?</h4>
                    <dl class="row">
                        <dt class="col-sm-3">Course Title:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CourseTitle)</dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3">Duration:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Duration)</dd>

                        <dt class="col-sm-3">Instructor ID:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Instructor.InstructorName)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CourseId" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
