@model WebApplication1.Models.Lesson

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title">Create Lesson</h1>

<h4>Lesson</h4>
<hr />
<div class="form-container">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LessonNo" class="control-label">Lesson Number</label>
                    <input asp-for="LessonNo" class="form-control" />
                    <span asp-validation-for="LessonNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseId" class="control-label">Course</label>
                    <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="LessonTitle" class="control-label">Lesson Title</label>
                    <input asp-for="LessonTitle" class="form-control" />
                    <span asp-validation-for="LessonTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label">Duration</label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group" style="float:right;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary" style="float:right;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
