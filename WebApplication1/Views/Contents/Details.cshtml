@model WebApplication1.Models.Content

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="mt-4">Content Details</h1>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Content Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContentTitle)</dd>

                <dt class="col-sm-3">Type:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContentType)</dd>

                <dt class="col-sm-3">URL:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ContentUrl)</dd>

                <dt class="col-sm-3">Lesson No:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Lesson.LessonNo)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model?.ContentId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
